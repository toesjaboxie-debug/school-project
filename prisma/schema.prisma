// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String           @id @default(cuid())
  username        String           @unique
  password        String
  isAdmin         Boolean          @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  files           File[]
  grades          Grade[]
  supportMessages SupportMessage[]
  bugReports      BugReport[]
  chatHistories   ChatHistory[]
  keuzelessen     UserKeuzeles[]
}

model File {
  id          String   @id @default(cuid())
  title       String
  description String
  content     String   @db.Text
  fileUrl     String?
  subject     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model Grade {
  id          String   @id @default(cuid())
  subject     String
  testName    String
  grade       Float
  maxGrade    Float    @default(10.0)
  date        DateTime @default(now())
  comment     String?
  isStudentAdded Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  studentId   String
  student     User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model Agenda {
  id          String   @id @default(cuid())
  title       String
  description String?
  testDate    DateTime
  subject     String
  type        String   @default("toets")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SupportMessage {
  id          String   @id @default(cuid())
  message     String   @db.Text
  type        String   @default("suggestie")
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BugReport {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  status      String   @default("open") // open, in_progress, resolved
  priority    String   @default("medium") // low, medium, high
  reporterName String? // For non-logged in users
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Subject {
  id          String   @id @default(cuid())
  name        String   @unique
  displayName String
  icon        String?
  color       String?
  createdAt   DateTime @default(now())
}

model SiteSettings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Chat History - saves AI conversations
model ChatHistory {
  id        String   @id @default(cuid())
  subject   String?  // optional subject context
  model     String   @default("glm-4.5-air:free")
  messages  String   @db.Text // JSON string of messages
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Schedule (Rooster) - class schedule, admin only
model Schedule {
  id          String   @id @default(cuid())
  day         String   // monday, tuesday, etc.
  period      Int      // 1st, 2nd, 3rd period
  subject     String
  room        String?
  teacher     String?
  startTime   String   // e.g., "08:30"
  endTime     String   // e.g., "09:20"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Keuzelessen - elective courses
model Keuzeles {
  id          String   @id @default(cuid())
  name        String
  description String?
  teacher     String?
  maxStudents Int      @default(30)
  day         String?  // when it takes place
  period      String?  // time period
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  students    UserKeuzeles[]
}

// User-Keuzeles relation (users can choose keuzelessen)
model UserKeuzeles {
  id          String   @id @default(cuid())
  userId      String
  keuzelesId  String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  keuzeles    Keuzeles @relation(fields: [keuzelesId], references: [id], onDelete: Cascade)
  
  @@unique([userId, keuzelesId])
}
