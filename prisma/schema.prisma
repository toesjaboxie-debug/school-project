// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String           @id @default(cuid())
  username        String           @unique
  password        String
  isAdmin         Boolean          @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  files           File[]
  grades          Grade[]
  supportMessages SupportMessage[]
}

model File {
  id          String   @id @default(cuid())
  title       String
  description String
  content     String   @db.Text
  fileUrl     String?
  subject     String   // Vak: wiskunde, engels, nederlands, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model Grade {
  id          String   @id @default(cuid())
  subject     String   // Vak
  testName    String   // Naam van de toets
  grade       Float    // Cijfer
  maxGrade    Float    @default(10.0)
  date        DateTime @default(now())
  comment     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  studentId   String
  student     User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model Agenda {
  id          String   @id @default(cuid())
  title       String
  description String?
  testDate    DateTime
  subject     String   // Vak
  type        String   @default("toets") // toets, examen, opdracht, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SupportMessage {
  id          String   @id @default(cuid())
  message     String   @db.Text
  type        String   @default("suggestion") // suggestie, vraag, probleem
  status      String   @default("pending") // pending, bekeken, opgelost
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Predefined subjects (vakken)
model Subject {
  id          String   @id @default(cuid())
  name        String   @unique // wiskunde, engels, nederlands, etc.
  displayName String   // Display name like "Wiskunde"
  icon        String?  // Emoji icon
  color       String?  // Color for UI
  createdAt   DateTime @default(now())
}

// Site settings (logo, site name, etc.)
model SiteSettings {
  id          String   @id @default(cuid())
  key         String   @unique // e.g., "logo", "siteName"
  value       String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
